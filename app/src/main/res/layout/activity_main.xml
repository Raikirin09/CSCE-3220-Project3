<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:drawableStart="@drawable/ic_red"
        android:text="@string/red_button_text"
        android:textColor="#000000"
        tools:ignore="DuplicateClickableBoundsCheck"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="onRedButtonClick"/>/>


    <Button
        android:id="@+id/buttonGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:drawableStart="@drawable/ic_green"
        android:text="@string/green_button_text"
        android:textColor="#616161"
    android:layout_below="@id/buttonRed"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_centerHorizontal="true"
    android:onClick="onGreenButtonClick"/>

    <Button
        android:id="@+id/buttonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blue_button_text"
        android:background="@color/blue"
        android:drawableStart="@drawable/ic_blue"
        android:textColor="@android:color/white"
    android:layout_below="@id/buttonGreen"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:onClick="onBlueButtonClick"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_placeholder"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/image_content_description"/>
</RelativeLayout>
